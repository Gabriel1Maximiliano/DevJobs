<main class="lista-vacantes">
    <h2>Navegaci√≥n</h2>
    <div class="botones separador">
        <a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
        <a href="/vacantes/nueva" class="btn btn-verde">Nueva Vacante</a>
    </div>

    <h2>Tus Vacantes</h2>

    <div class="panel-administracion">
        {{#if vacantes.length}}
            {{#each vacantes}}
                <div class="vacante ">
                    <div class="caja">
                        <h3>{{empresa}}</h3>
                        <p class="puesto">{{titulo}}</p>
                        <p class="candidatos">
                            {{candidatos.length}}  
                        </p>
                        
                    </div> 
                    <div class="centrar-vertical caja">
                     <a href="/candidatos/hola/{{_id}}" class="btn btn-verde">Nuevo</a>
                      
                    </div>
                    <div class="centrar-vertical caja"> 
                       <a href="/vacante/{{url}}" class="btn btn-amarillo">Editar</a>
                    </div>
                     <div class="centrar-vertical caja">
                        <a href="/vacante/eliminar/{{url}}" class="btn btn-rojo">Eliminar</a>
                    </div>
                   <a href="/vacante/eliminar/{{url}}">eliminar2</a>
                   
                   
                </div>
            {{/each}}
        {{else}}
            <p>No Hay vacantes, crea una</p>
        {{/if}}
    </div>
</main>